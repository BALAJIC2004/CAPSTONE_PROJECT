<!DOCTYPE html>
<html>

<head>
    <title>Login - Jal Rakshakti</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .login-body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body class="login-body">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card login-card">
                    <div class="card-header text-center text-white bg-primary">
                        <h4>ðŸŒŠ Jal Shakti</h4>
                        <p class="mb-0">NRW Monitoring System</p>
                    </div>
                    <div class="card-body">
                        <% if (error) { %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                            <% } %>

                                <form method="POST">
                                    <div class="mb-3">
                                        <label class="form-label">Username</label>
                                        <input type="text" class="form-control" name="username" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Password</label>
                                        <input type="password" class="form-control" name="password" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Login</button>
                                </form>

                                <div class="mt-4">
                                    <h6>Demo Accounts:</h6>
                                    <div class="row">
                                        <div class="col-4">
                                            <small class="text-muted">DMA Staff</small><br>
                                            <strong>admin</strong><br>
                                            <small>admin2004</small>
                                        </div>
                                        <div class="col-4">
                                            <small class="text-muted">Field Team</small><br>
                                            <strong>field_tech</strong><br>
                                            <small>tech2004</small>
                                        </div>
                                        <div class="col-4">
                                            <small class="text-muted">Public User</small><br>
                                            <strong>user</strong><br>
                                            <small>user2004</small>
                                        </div>
                                    </div>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>